nextflow_process {

    name "Test Process MICRONUCLAI_PREDICT"
    script "../../../modules/local/micronuclai.nf"
    process "MICRONUCLAI_PREDICT"

    test("Run micronuclAI") {

        when {
            process {
                """
                input[0] = [
                    [ id: 'test' ],
                    file('https://raw.githubusercontent.com/SchapiroLabor/nf-core-test-datasets/micronuclAI_nf/data/test1.tif'),
                    file('https://raw.githubusercontent.com/SchapiroLabor/nf-core-test-datasets/micronuclAI_nf/data/test1.stardist.tif')
                ]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
